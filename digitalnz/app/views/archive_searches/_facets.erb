<div id="facetsColumn">
    <%for facet in @facets%>
    <div class="facetField">
    <h5><%=facet['facet_field'].camelize%></h5>
    <ul>
        <%for value in facet['values']
        child_facet = @child_facet_fields[value['name']]
        link = '/archive_searches/search'+@previous_params+'&f='+child_facet.id.to_s
        %>
        <li>
            <a href="<%=link%>"><%=value['name']%></a> (<%=value['num_results']%>)
        </li>
        <%end%>
    </ul>
    </div>
    <%end%>
</div>